void checkIfOdd(int num) {
	if (num % 2 == 0) {
		cout << "number is even";
	}
	else {
		cout << "number is odd";
	}
}

void getNumber(int num) {
	cout << "enter a number" << endl;
	cin >> num;
	checkIfOdd(num);
}



